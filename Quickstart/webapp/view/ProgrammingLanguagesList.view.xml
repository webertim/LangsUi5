<mvc:View
   controllerName="sap.ui.demo.walkthrough.controller.ProgrammingLanguagesList"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <List       
	  id="invoiceList"
      headerText="{i18n>programmingLanguagesListTitle}"
      class="sapUiResponsiveMargin"
      width="auto"
      items="{
         path : 'programmingLanguage>/ProgrammingLanguages',
         sorter : {
				path : 'Name',
				group : true
			}
      }" >
   	
   	<headerToolbar>
         <Toolbar id="e">
            <Title id="f" text="{i18n>programmingLanguagesListTitle}"/>
            <ToolbarSpacer id="g"/>
            <SearchField id="h" width="50%" search=".onFilterInvoices"/>
         </Toolbar>
      </headerToolbar>
      <items>
         <ObjectListItem id="b"
			title="{programmingLanguage>Name}"
			number="{programmingLanguage>OperationArea}"
			numberUnit="{view>/currency}"
			numberState="{= ${programmingLanguage>ExtendedPrice} > 50 ? 'Error' : 'Success' }">
			<firstStatus>
						<ObjectStatus id="c" text="{
							path: 'invoice>Status',
							formatter: '.formatter.statusText'
						}"/>
			</firstStatus>
		</ObjectListItem>
	</items>
   </List>
</mvc:View>